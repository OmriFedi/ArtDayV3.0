{% include '::AdminHeader.html.twig' %}
<div class="mainpanel">

    <div class="contentpanel">

        <ol class="breadcrumb breadcrumb-quirk">
            <li><a href="index.html"><i class="fa fa-home mr5"></i> Home</a></li>
            <li><a href="basic-tables.html">Gestion Commandes</a></li>
            <li class="active">Liste Commande</li>
        </ol>
        <div class="panel">
            <div class="panel-heading">
                <h4 class="panel-title">Basic Styling</h4>
                <p>For basic styling add the base class <code>.table</code> to any table.</p>

            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table nomargin">
                        <thead>
                        <tr>

                            <th>ID_Commande</th>
                            <th>ID_User</th>
                            <th>Total</th>
                            <th>Action</th>



                        </tr>
                        </thead>
                        <tbody>
                        {% for commande in commande %}

                        <tr>
                            <td>{{ commande.id }}</td>
                            <td>    <a class="" data-toggle="modal" data-target="#myModal{{ commande.id }}">
                                    Voir Client
                                </a></td>

                            <td class="text-center">{{ commande.total }}</td>


                            <td>
                                <a href="{{ path('commande',{'id': commande.id}) }}" target="_blank" class="btn btn-primary">Afficher</a></td>

                        </tr>

                            <div class="modal bounceIn animated" id="myModal{{ commande.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            <h4 class="modal-title" id="myModalLabel">Informations Clients </h4>
                                        </div>
                                        <form method="POST" Action="add_categorie">
                                            <div class="modal-body">

                                                <div class="col-sm-12">
                                                    <div class="panel">
                                                        <div class="panel-heading">
                                                        </div>
                                                        <div class="panel-body">
                                                            <div class="modal-footer">

                                                                <h1><strong> Informations </strong>  </h1>
                                                                {% for user in user %}
                                                                    {% if commande.getIdUser()==user.id %}
                                                                        <h1><strong>ID : </strong>  {{ user.id }} </h1>
                                                                        <h1><strong>NOM : </strong>  {{ user.username }} </h1>
                                                                        <h1><strong>Email : </strong>  {{ user.email }} </h1>
                                                                    {% endif %}


                                                                {% endfor %}


                                                            </div>




                                                        </div>
                                                    </div><!-- panel -->












                                                </div><!-- col-sm-6 -->

                                            </div>
                                            <div class="modal-footer">



                                            </div>
                                        </form>
                                    </div><!-- modal-content -->
                                </div><!-- modal-dialog -->
                            </div><!-- modal -->


                            {% if(commande.archive != null) %}




                           {% endif %}

                        {% endfor %}

                        </tbody>
                    </table>
                </div><!-- table-responsive -->
            </div>
        </div><!-- panel -->







{% include '::AdminFooter.html.twig' %}