{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categorie</h1>
<div class="table-responsive">
    <table class="table table-bordered nomargin" role="grid">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Libellecategorie</th>
                <td>{{ categorie.libelleCategorie }}</td>
            </tr>
        </tbody>
    </table>
</div>
    <ul>
        <li>
            <a href="{{ path('categorie_index') }}" class="btn btn-success">Back to the list</a>

            <a href="{{ path('categorie_edit', { 'id': categorie.id }) }}" class="btn btn-default">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
